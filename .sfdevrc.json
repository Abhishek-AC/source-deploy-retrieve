{
  "wireit": {
    "compile": {
      "command": "tsc -p . --pretty --incremental",
      "files": [
        "src/**/*.ts",
        "**/tsconfig.json",
        "messages/**",
        "src/registry/metadataRegistry.json",
        "src/registry/stdValueSetRegistry.json"
      ],
      "output": ["lib/**", "*.tsbuildinfo"],
      "clean": "if-file-deleted"
    },
    "test:only": {
      "command": "nyc mocha \"test/**/*.test.ts\"",
      "env": {
        "FORCE_COLOR": "2"
      },
      "files": [
        "test/**/*.ts",
        "src/**/*.ts",
        "**/tsconfig.json",
        ".mocha*",
        "!*.nut.ts",
        ".nycrc",
        "src/registry/metadataRegistry.json",
        "src/registry/stdValueSetRegistry.json"
      ],
      "output": []
    }
  }
}
